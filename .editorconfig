# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline =
curly_bracket_next_line = false
spaces_around_operators = true
quote_type = double

[*.{js,ts,json}]
indent_size = 2
quote_type = single

[*.{yaml,yml}]
indent_size = 2
quote_type = double
